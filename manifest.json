{
    "manifest_version": 3,
    "name": "SeniorSurf",
    "version": "1.0",
    "description": "Helps the elderly find buttons and actions to fulfill their tasks on a website.",
    "permissions": ["activeTab", "storage","scripting" ],
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "http://localhost:5001/",
      "https://*.generativeai.google/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
  }
  